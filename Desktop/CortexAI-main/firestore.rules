// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar Role
    function hasRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Regras para Usuários (apenas o próprio pode ler/escrever seu perfil)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para Documentos de Processos
    // Caminho: artifacts/{appId}/users/{userId}/intelligent_platform_docs/{docId}
    match /artifacts/{appId}/users/{userId}/intelligent_platform_docs/{docId} {
      // Dono do documento (Solicitante) pode ler e criar
      allow read, create: if request.auth != null && request.auth.uid == userId;
      
      // Apenas Analistas e Sistema podem atualizar status (ex: Aprovado)
      allow update: if request.auth != null && (request.auth.uid == userId || hasRole('analista_rh') || hasRole('admin'));
      
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para Regras de Negócio (Critical)
    match /artifacts/{appId}/users/{userId}/rules/{ruleId} {
      allow read: if request.auth != null; // Todos podem ler as regras aplicadas
      // APENAS Admin ou Analista de RH podem editar regras
      allow write: if request.auth != null && (hasRole('analista_rh') || hasRole('admin'));
    }
    
    // Bloqueia todo o resto por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}